# ======================
# Database Configuration
# ======================
DB_HOST=localhost
DB_PORT=27017
DB_USERNAME=admin
DB_PASSWORD=123456
DB_NAME=law_chatbot

# Alternative: Use full MongoDB URI (overrides above settings)
# MONGO_URI=mongodb://admin:123456@localhost:27017/law_chatbot?authSource=admin

# ======================
# ChromaDB Configuration
# ======================
CHROMA_HOST=localhost
CHROMA_PORT=8001

# ======================
# Application Settings
# ======================
APP_HOST=0.0.0.0
APP_PORT=8000
APP_ENV=development

# ======================
# LLM Configuration
# ======================
# Gemini API (Google Generative AI)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-pro

# VNPT API (if using)
VNPT_API_KEY=your_vnpt_api_key_here
VNPT_API_URL=https://api.vnpt.ai/v1

# ======================
# Agent Configuration
# ======================
# Enable/disable planner
ENABLE_PLANNER=true

# Use conversation history
USE_CONVERSATION_HISTORY=true

# Max iterations for function calling
MAX_ITERATIONS=10

# ======================
# Vector Database
# ======================
# Backend type: in-memory, chroma, qdrant
VECTOR_DB_BACKEND=in-memory

# ChromaDB settings (if using chroma backend)
CHROMA_PERSIST_DIRECTORY=./storage/chroma
USE_GOOGLE_EMBEDDING=false

# Qdrant settings (if using qdrant backend)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# ======================
# Worker Configuration
# ======================
WORKER_COUNT=5
WORKER_POLL_INTERVAL=1.0

# ======================
# Logging
# ======================
LOG_LEVEL=INFO
